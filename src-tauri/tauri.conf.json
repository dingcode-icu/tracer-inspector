{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "tracer-inspector",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }, 
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://*:6086/json"
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    
    "windows": [  
      {
        "fullscreen": false,
        "resizable": true,
        "title": "tracer-inspector",
        "width": 480,
        "minWidth": 480,
        "minHeight": 800,
        "height": 800,
        "center": true,
        "visible":true
      }, 
      {
        "visible":false, 
        "width": 550,
        "center": true, 
        "focus":true, 
        "height": 200,
        "decorations": false,
        "url": "/splash.png",
        "label": "splashscreen", 
        "alwaysOnTop": true,
        "transparent": true
        }
    ]
  }
}
